<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BF63"
    android:orientation="vertical"
    tools:context=".fragments.AskFragment">

    <ImageView
        android:id="@+id/vector"
        android:layout_width="356.56dp"
        android:layout_height="324.03dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/vector_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/untitled_de"
        android:layout_width="348dp"
        android:layout_height="249.68dp"
        android:background="@drawable/ambu_1"
        app:layout_constraintBottom_toBottomOf="@+id/vector"
        app:layout_constraintEnd_toEndOf="@+id/vector"
        app:layout_constraintStart_toStartOf="@+id/vector"
        app:layout_constraintTop_toTopOf="@+id/vector" />

    <TextView
        android:id="@+id/select_who_"
        android:layout_width="335.84dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"

        android:gravity="top"
        android:lineHeight="42sp"
        android:text="Select How You Want to Proceed As"
        android:textColor="@color/white"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="@+id/vector"
        app:layout_constraintTop_toBottomOf="@+id/vector" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/user_button"
        android:layout_width="353dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle_2"

        android:lineHeight="42sp"
        android:text="Patient"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_who_"
        app:layout_constraintVertical_bias="0.372" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/org_button"
        android:layout_width="353dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="36dp"
        android:background="@drawable/rectangle_3"
        android:text="Organization"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_button"
        app:layout_constraintVertical_bias="0.6" />


</androidx.constraintlayout.widget.ConstraintLayout>
